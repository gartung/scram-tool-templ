<tool name="thepeg" version="1.9.2p1-fmblme">
  <lib name="ThePEG"/>
  <lib name="LesHouches"/>
  <client>
    <environment name="THEPEG_BASE" default="thepeg/1.9.2p1-fmblme"/>
    <environment name="LIBDIR" default="$THEPEG_BASE/lib/ThePEG"/>
    <environment name="INCLUDE" default="$THEPEG_BASE/include"/>
  </client>
  <runtime name="ROOT_INCLUDE_PATH" value="$INCLUDE" type="path"/>
  <use name="root_cxxdefaults"/>
  <use name="lhapdf"/>
  <use name="gsl"/>
  <flags SKIP_TOOL_SYMLINKS="1"/>
</tool>
