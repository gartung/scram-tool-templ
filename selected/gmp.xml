<tool name="gmp" version="6.1.0">
  <lib name="gmp"/>
  <client>
    <environment name="GMP_BASE"  default="gmp-static/6.1.0"/>
    <environment name="INCLUDE"   default="$GMP_BASE/include"/>
    <environment name="LIBDIR"    default="$GMP_BASE/lib"/>
  </client>
  <use name="mpfr"/>
  <flags SKIP_TOOL_SYMLINKS="1"/>
</tool>
