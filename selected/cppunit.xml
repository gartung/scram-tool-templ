<tool name="cppunit" version="$CPPUNIT_VER">
  <lib name="cppunit"/>
  <client>
    <environment name="CPPUNIT_BASE" default="$CPPUNIT_PREFIX"/>
    <environment name="LIBDIR" default="$$CPPUNIT_BASE/lib"/>
    <environment name="INCLUDE" default="$$CPPUNIT_BASE/include"/>
  </client>
  <use name="sockets"/>
  <flags SKIP_TOOL_SYMLINKS="1"/>
</tool>
