  <tool name="opengl" version="XFree4.2">
    <lib name="GL"/>
    <lib name="GLU"/>
    <use name="x11"/>
    <environment name="ORACLE_ADMINDIR" default="/etc"/>
    <client>
      <environment name="OPENGL_BASE" default="/usr"/>
      <environment name="INCLUDE"     default="$$OPENGL_BASE/include"/>
      <environment name="LIBDIR"      default="$$OPENGL_BASE/lib64"/>
    </client>
    <flags SKIP_TOOL_SYMLINKS="1"/>
  </tool>
