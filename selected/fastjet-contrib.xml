  <tool name="fastjet-contrib" version="${FASTJET_CONTRIB_VER}">
    <info url="http://fastjet.hepforge.org/contrib/"/>
    <lib name="fastjetcontribfragile"/>
    <client>
      <environment name="FASTJET_CONTRIB_BASE" default="${FASTJET_CONTRIB_PREFIX}"/>
