<tool name="rootcling" version="${ROOT_VER}">
  <info url="http://root.cern.ch/root/"/>
  <lib name="Core"/>
  <client>
    <environment name="ROOTCLING_BASE" default="${ROOT_PREFIX}"/>
    <environment name="INCLUDE"        default="$$ROOTCLING_BASE/include"/>
  </client>
  <use name="root_interface"/>
  <use name="sockets"/>
  <use name="pcre"/>
  <use name="zlib"/>
</tool>
