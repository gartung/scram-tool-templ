<tool name="libffi" version="${LIBFFI_VER}">
  <lib name="ffi"/>
  <client>
    <environment name="LIBFFI_BASE" default="${LIBFFI_PREFIX}"/>
    <environment name="LIBDIR" default="$$LIBFFI_BASE/lib"/>
    <environment name="INCLUDE" default="$$LIBFFI_BASE/include"/>
  </client>
  <flags SKIP_TOOL_SYMLINKS="1"/>
</tool>
