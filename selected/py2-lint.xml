<tool name="py2-lint" version="${PY2_LINT_VER}">
  <client>
    <environment name="PY2_LINT_BASE" default="${PY2_LINT_PREFIX}"/>
  </client>
  <runtime name="PATH" value="$$PY2_LINT_BASE/bin" type="path"/>
  <runtime name="PYTHONPATH" value="$$PY2_LINT_BASE/lib/python2.7/site-packages" type="path"/>
  <use name="python"/>
</tool>
