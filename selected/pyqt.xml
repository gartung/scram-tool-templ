<tool name="pyqt" version="${PYQT_VER}">
  <info url="http://www.riverbankcomputing.co.uk/software/pyqt/intro"/>
  <client>
    <environment name="PYQT_BASE" default="${PYQT_PREFIX}"/>
  </client>
  <runtime name="PYTHONPATH" value="$$PYQT_BASE/lib/python2.7/site-packages" type="path"/>
  <use name="python"/>
  <use name="qt"/>
  <use name="sip"/>
</tool>
