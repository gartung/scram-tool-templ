<tool name="graphviz" version="${GRAPHVIZ_VER}">
  <info url="http://www.research.att.com/sw/tools/graphviz/"/>
  <client>
    <environment name="GRAPHVIZ_BASE" default="${GRAPHVIZ_PREFIX}"/>
  </client>
  <runtime name="PATH" value="$$GRAPHVIZ_BASE/bin" type="path"/>
  <use name="expat"/>
  <use name="zlib"/>
  <use name="libjpeg-turbo"/>
  <use name="libpng"/>
</tool>
