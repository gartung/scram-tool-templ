<tool name="mpfr" version="${MPFR_VER}">
  <lib name="mpfr"/>
  <client>
    <environment name="MPFR_BASE"  default="${MPFR_PREFIX}"/>
    <environment name="INCLUDE"   default="$$MPFR_BASE/include"/>
    <environment name="LIBDIR"    default="$$MPFR_BASE/lib"/>
  </client>
  <flags SKIP_TOOL_SYMLINKS="1"/>
</tool>
