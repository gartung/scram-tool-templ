<tool name="jimmy" version="${JIMMY_VER}">
  <lib name="jimmy"/>
  <client>
    <environment name="JIMMY_BASE" default="${JIMMY_PREFIX}"/>
    <environment name="LIBDIR" default="$$JIMMY_BASE/lib"/>
  </client>
  <use name="f77compiler"/>
  <use name="herwig"/>
  <use name="jimmy_headers"/>
  <flags SKIP_TOOL_SYMLINKS="1"/>
</tool>
