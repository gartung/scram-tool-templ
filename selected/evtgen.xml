<tool name="evtgen" version="1.6.0-fmblme">
  <lib name="EvtGen"/>
  <lib name="EvtGenExternal"/>
  <client>
    <environment name="EVTGEN_BASE" default="evtgen/1.6.0-fmblme"/>
    <environment name="LIBDIR" default="$EVTGEN_BASE/lib"/>
    <environment name="INCLUDE" default="$EVTGEN_BASE/include"/>
  </client>
  <runtime name="EVTGENDATA" value="$EVTGEN_BASE/share"/>
  <use name="hepmc"/>
  <use name="pythia8"/>
  <use name="tauolapp"/>
  <use name="photospp"/>
  <flags SKIP_TOOL_SYMLINKS="1"/>
</tool>
