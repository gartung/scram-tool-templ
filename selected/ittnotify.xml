<tool name="ittnotify" version="${ITTNOTIFY_VER}">
 <lib name="ittnotify"/>
 <client>
    <environment name="ITTNOTIFY_BASE" default="${ITTNOTIFY_PREFIX}"/>
    <environment name="INCLUDE" default="$$ITTNOTIFY_BASE/include"/>
    <environment name="LIBDIR" default="$$ITTNOTIFY_BASE/lib"/>
 </client>
  <runtime name="ROOT_INCLUDE_PATH" value="$$INCLUDE" type="path"/>
  <flags SKIP_TOOL_SYMLINKS="1"/>
  </tool>
