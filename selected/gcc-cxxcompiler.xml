  <tool name="gcc-cxxcompiler" version="${GCC_VER}" type="compiler">
    <client>
      <environment name="GCC_CXXCOMPILER_BASE" default="${GCC_PREFIX}"/>
    </client>
    <flags CPPDEFINES="GNU_GCC _GNU_SOURCE   "/>
    <flags CXXSHAREDOBJECTFLAGS="-fPIC   "/>
    <flags CXXFLAGS="-O2 -pthread -pipe -Werror=main -Werror=pointer-arith"/>
    <flags CXXFLAGS="-Werror=overlength-strings -Wno-vla  -arch x86_64  -std=c++14 -ftree-vectorize -Wstrict-overflow -Werror=array-bounds -Werror=type-limits -fvisibility-inlines-hidden -fno-math-errno -msse3"/>
    <flags CXXFLAGS="-felide-constructors -fmessage-length=0"/>
    <flags CXXFLAGS="-Wall -Wno-long-long -Wreturn-type"/>
    <flags CXXFLAGS="-Wunused -Wparentheses -Wno-deprecated -Werror=return-type"/>
    <flags CXXFLAGS="-Werror=missing-braces -Werror=unused-value"/>
    <flags CXXFLAGS="-Werror=address -Werror=sign-compare"/>
    <flags CXXFLAGS="-Werror=write-strings -Werror=delete-non-virtual-dtor"/>
    <flags CXXFLAGS="-Werror=strict-aliasing"/>
    <flags CXXFLAGS="-Werror=narrowing -Werror=uninitialized"/>
    <flags CXXFLAGS="-Werror=reorder"/>
    <flags CXXFLAGS="-Werror=unused-variable -Werror=conversion-null"/>
    <flags CXXFLAGS="-Wno-unused-local-typedefs -Wno-attributes -Wno-error=potentially-evaluated-expression"/>
    <flags CXXFLAGS="-I${SELF_INC}"/>
    <flags CXXFLAGS="-mmacosx-version-min=10.8 -stdlib=libc++"/> 
    <flags LDFLAGS="-Wl,-commons -Wl,use_dylibs -Wl,-headerpad_max_install_names"/>
    <flags CXXSHAREDFLAGS="-shared -dynamic -single_module -arch x86_64 "/>
    <flags LD_UNIT=" -r "/>
    <architecture name="!_clang8">
        <runtime name="DYLD_LIBRARY_PATH" value="$$GCC_CXXCOMPILER_BASE/lib" type="path"/>
        <runtime name="DYLD_LIBRARY_PATH" value="$$GCC_CXXCOMPILER_BASE/lib" type="path"/>
        <runtime name="PATH" value="$$GCC_CXXCOMPILER_BASE/bin" type="path"/>
    </architecture>
  </tool>
